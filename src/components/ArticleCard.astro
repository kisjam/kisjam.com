const { title, date, modified, slug } = Astro.props;
const publishedDate = new Date(date);
const updatedDate = new Date(modified);

const isUpdated = compareDates(publishedDate, updatedDate);

function compareDates(publishedDate, updatedDate) {
  if (publishedDate.getTime() === updatedDate.getTime()) {
	return false;
  } else if (publishedDate.getTime() < updatedDate.getTime()) {
    return true;
  }
}

